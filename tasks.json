{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Check Ports",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/check-ports.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "echo": true
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "detail": "Pr√ºft den Status aller wichtigen Ports (8000, 11434, 3000, 5000, 9000) und zeigt laufende Docker-Container an."
    },
    {
      "label": "Start Chatbot Container",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/start-container.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "echo": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Startet den Chatbot-Container mit automatischer Port-Konflikt-Erkennung und -Behebung."
    },
    {
      "label": "Stop Chatbot Container",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "down"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "echo": true
      },
      "group": "build",
      "detail": "Stoppt alle Container des Chatbot-Projekts."
    },
    {
      "label": "Restart Chatbot Container",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "restart"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "echo": true
      },
      "group": "build",
      "detail": "Startet alle Container des Chatbot-Projekts neu."
    },
    {
      "label": "View Container Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": [
        "logs",
        "-f",
        "--tail=50"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "clear": true,
        "echo": true
      },
      "group": "test",
      "detail": "Zeigt die Logs aller Container (letzte 50 Zeilen, live)."
    }
  ]
}
